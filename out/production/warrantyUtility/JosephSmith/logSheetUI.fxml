<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<GridPane
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="JosephSmith.logUIController"
            prefHeight="400.0" prefWidth="600.0" vgap="15">

    <Label text="Warranty Machine Log" GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="BASELINE">
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="BOTTOM_RIGHT" spacing="10">
        <Label text="Search:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="logSearch" onKeyPressed="#displayLogSearchResult"/>
    </HBox>



    <TableView fx:id="logUITableView" GridPane.rowIndex="3" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
        <placeholder>
            <Label text="There are no results for this search"/>
        </placeholder>
        <columns>
            <TableColumn fx:id="dateColumn" text="Date"/>
            <TableColumn fx:id="requestNumberColumn" text="Request Number"/>
            <TableColumn fx:id="serviceTagColumn" text="Service Tag"/>
            <TableColumn fx:id="modelColumn" text="Model"/>
            <TableColumn fx:id="machineIssueColumn" text="Machine Issue"/>
            <TableColumn fx:id="partNeededColumn" text="Part Needed"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <HBox fx:id="logUIButtonHBox" GridPane.columnIndex="0" GridPane.rowIndex="4" alignment="BOTTOM_RIGHT" spacing="10">
        <Button fx:id="displayPieChart" text="View Pie Chart" onAction="#displayLogPieChart"/>
        <Button fx:id="returnToMainButton" text="Return to Warranty Form" onAction="#displayMainUI"/>
    </HBox>
</GridPane>
