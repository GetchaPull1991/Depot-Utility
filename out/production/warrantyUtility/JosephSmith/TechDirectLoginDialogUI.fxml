<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="JosephSmith.TechDirectLoginDialogController"
          prefHeight="100" prefWidth="600" hgap="20" vgap="20">

    <rowConstraints>
        <RowConstraints percentHeight="25"/>
        <RowConstraints percentHeight="25"/>
        <RowConstraints percentHeight="25"/>
        <RowConstraints percentHeight="25"/>
    </rowConstraints>
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label text="Dell Tech Direct Login Credentials" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" style="-fx-font-weight: bold;">
        <padding>
            <Insets bottom="10"/>
        </padding>
    </Label>


    <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="10">
        <Label text="WWID: " style="-fx-font-weight: bold;"/>
        <Label text="Password: " style="-fx-font-weight: bold;"/>
    </VBox>
    <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="10" GridPane.hgrow="ALWAYS">
        <TextField fx:id="techDirectWwidField"/>
        <PasswordField fx:id="techDirectPassField"/>
    </VBox>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
        <Label fx:id="alertLabel" textFill="red" visible="false"/>
    </HBox>
    <HBox GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="RIGHT" spacing="10">
        <padding>
            <Insets top="20"/>
        </padding>
        <Button fx:id="loginButton" text="Login" onAction="#performWarranty" style="-fx-font-weight: bold;"/>
        <Button fx:id="loginCancelButton" text="Cancel" onAction="#returnToWarrantyForm" style="-fx-font-weight: bold;"/>
    </HBox>

</GridPane>
