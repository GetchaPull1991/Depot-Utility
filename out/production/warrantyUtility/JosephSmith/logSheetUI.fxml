<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<GridPane
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="JosephSmith.logUIController"
            prefHeight="400.0" prefWidth="600.0" vgap="15">

    <Label text="Warranty Repair History" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="BASELINE">
        <font>
            <Font name="Arial" size="28"/>
        </font>
        <padding>
            <Insets top="20"/>
        </padding>
    </Label>

    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="80"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="85"/>
    </rowConstraints>

    <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" spacing="10">
        <padding>
            <Insets top="20" right="20" bottom="65" left="20"/>
        </padding>

        <Label text="Machine Status"/>

        <TableView fx:id="statusTable" VBox.vgrow="ALWAYS">
            <placeholder>
                <Label text="Status Not Available"/>
            </placeholder>

            <columns>
                <TableColumn fx:id="serviceTag" text="Service Tag"/>
                <TableColumn fx:id="status" text="Status"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>


    <VBox GridPane.columnIndex="1" GridPane.rowIndex="1"  GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"  spacing="10">

        <padding>
            <Insets top="20" right="20" bottom="30" left="20"/>
        </padding>
        <Label text="Machine Log"/>

        <TableView fx:id="logUITableView" VBox.vgrow="ALWAYS">
            <placeholder>
                <Label text="There are no results for this search"/>
            </placeholder>

            <columns>
                <TableColumn fx:id="dateColumn" text="Date"/>
                <TableColumn fx:id="requestNumberColumn" text="Request Number"/>
                <TableColumn fx:id="serviceTagColumn" text="Service Tag"/>
                <TableColumn fx:id="modelColumn" text="Model"/>
                <TableColumn fx:id="machineIssueColumn" text="Machine Issue"/>
                <TableColumn fx:id="partNeededColumn" text="Part Needed"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
         </TableView>

        <HBox GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="BOTTOM_RIGHT" spacing="10">
            <Label text="Search:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="logSearch" onKeyPressed="#displayLogSearchResult"/>
        </HBox>

    </VBox>
</GridPane>
