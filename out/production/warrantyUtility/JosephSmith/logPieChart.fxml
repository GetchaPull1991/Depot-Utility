<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="JosephSmith.LogPieChartController"
          prefHeight="400.0" prefWidth="600.0">
    <Label text="Warranty Machine Pie Chart" GridPane.rowIndex="0" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24"/>
        </font>
    </Label>
    <PieChart fx:id="logPieChart" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <HBox fx:id="pieChartLogUIButtonBox" GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="BOTTOM_RIGHT" spacing="10">
        <Button text="Sort By Model" fx:id="pieChartSortButton" onAction="#onSortButtonClick"/>
        <Button fx:id="returnToLog" text="Return to Log" onAction="#displayLog"/>
    </HBox>
</GridPane>
