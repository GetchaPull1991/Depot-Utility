<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import com.jfoenix.controls.JFXButton?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="JosephSmith.ServiceNowController"
          prefHeight="400.0" prefWidth="600.0" vgap="10" hgap="10">

    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="80"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="95"/>
        <RowConstraints percentHeight="5"/>
    </rowConstraints>

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="10">
        <Label text="SCTASK: " styleClass="formLabel"/>
        <TextField fx:id="taskNumber" onKeyPressed="#onTaskKeyEnter"/>
        <Label text="Tracking Number: " styleClass="formLabel"/>
        <TextField fx:id="trackingNumber"/>
        <Label text="Work Notes: " styleClass="formLabel"/>
        <TextArea fx:id="workNotes" wrapText="true"/>

        <JFXButton styleClass="jfxButton" id="jfxButton" buttonType="RAISED" text="Add Task" onAction="#addToQueue"/>
    </VBox>

    <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="10" >
        <Label text="Task Queue" styleClass="formLabel"/>
        <TableView fx:id="scTaskTable" VBox.vgrow="ALWAYS">
            <placeholder>
                <Label text="No Tasks In Queue"/>
            </placeholder>
            <columns>
                <TableColumn fx:id="sctaskNumColumn" text="SCTASK"/>
                <TableColumn fx:id="sctaskTrackingColumn" text="Tracking Number" />
                <TableColumn fx:id="sctaskNotesColumn" text="Work Notes" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox spacing="20">
            <JFXButton styleClass="jfxButton" buttonType="RAISED" text="Remove Selected Task" onAction="#removeTask"/>
            <Label styleClass="alertLabel" fx:id="alertLabel" textFill="red" visible="false"/>
        </HBox>
    </VBox>
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="RIGHT">
        <JFXButton styleClass="jfxButton" buttonType="RAISED" text="Complete Tasks" onAction="#openLoginDialog"/>
    </HBox>

</GridPane>
